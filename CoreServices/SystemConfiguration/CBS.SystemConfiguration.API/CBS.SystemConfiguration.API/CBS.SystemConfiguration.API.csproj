    <ProjectReference Include="..\..\CBS.SystemConfiguration.MediatR\CBS.SystemConfiguration.MediatR.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CBS.CustomLog.Logger">
